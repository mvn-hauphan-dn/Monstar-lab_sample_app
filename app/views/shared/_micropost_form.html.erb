<%= form_for(@micropost) do |f| %>
  <div>
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
    <div class="form-text" style="color: red"><%= @micropost.errors.full_messages_for(:content).first %></div>
    <%= f.file_field :image %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>