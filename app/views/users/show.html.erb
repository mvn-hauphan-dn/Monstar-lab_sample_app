<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="text-left mt-5">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol>
        <%= render @microposts %>
      </ol>
    <% end %>
    <%= paginate @microposts, window: 2, theme: 'bootstrap-5' %>
  </div>
</div>
